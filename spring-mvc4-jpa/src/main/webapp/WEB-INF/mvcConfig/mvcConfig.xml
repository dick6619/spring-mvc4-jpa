<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
 	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
 	http://www.springframework.org/schema/mvc
 	http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
 	http://www.springframework.org/schema/context
 	http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<context:component-scan base-package="com.iii.ui.*" />

	<!-- Enable @Controller Annotation support -->
	<mvc:annotation-driven />

	<!-- Internal Resource View (內部資源視圖): -->
	<!-- Views或JSP文件放在"WEB-INF"目錄底下， 以保護其免受透過手動輸入網址而直接存取。只能由透過控制器類別來存取。 -->

	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/" />
		<property name="suffix" value=".jsp" />
	</bean>

	<!-- 以Controller的URI Mapping先 -->
	<mvc:view-controller path="/home" view-name="home" />
	<mvc:view-controller path="/addView" view-name="addEmp" />

	<!-- 靜態資源目錄resources，存放如 CSS/JavaScript...等 -->
	<mvc:resources mapping="/resources/**" location="/resources/" />

	<!-- Spring3.1開始支援-方法級別驗證 (JSR-349 Bean Validation 1.1) -->
	<!-- <bean class="org.springframework.validation.beanvalidation.MethodValidationPostProcessor" 
		/> -->

</beans>