	<select id="getEmps" resultType="com.iii.emp.domain.EmpVO">
		SELECT
		<include refid="allColumns" />
		FROM EMP2
	</select>
	
	<select id="getEmp" parameterType="com.iii.emp.domain.EmpVO" resultType="com.iii.emp.domain.EmpVO">
		SELECT *
		FROM EMP2
		WHERE empno = #{empno}
	</select>
	
	<update id="update" parameterType="com.iii.emp.domain.EmpVO">
		UPDATE EMP2
		<set>
			<if test="ename != null">
				ename = #{ename},
			</if>
			<if test="job != null">
				job = #{job},
			</if>
			<if test="hiredate != null">
				hiredate = #{hiredate},
			</if>
			<if test="sal != null">
				sal = #{sal},
			</if>
			<if test="comm != null">
				comm = #{comm},
			</if>
			<if test="deptno != null">
				deptno = #{deptno}
			</if>
		</set>
		WHERE empno = #{empno}
	</update>


	<delete id="delete" parameterType="com.iii.emp.domain.EmpVO">
		DELETE FROM EMP2
		WHERE
		empno =
		#{empno}
	</delete>


	<insert id="insert" useGeneratedKeys="true" keyProperty="empno" parameterType="com.iii.emp.domain.EmpVO">
		INSERT INTO EMP2 (
		ename, job, hiredate, sal, comm,
		deptno
		) values (
		#{ename},
		#{job},
		#{hiredate},
		#{sal},
		#{comm},
		#{deptno}
		)
	</insert>

	<select id="getEmpBySqlLike" parameterType="com.iii.emp.domain.EmpVO" resultType="com.iii.emp.domain.EmpVO">
		SELECT
		*
		FROM EMP2
		<if test="ename != null">
			Where ename like #{ename}
		</if>
	</select>


</mapper>